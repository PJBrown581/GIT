        super();

        this.getStartDate();
        this.updateChart();
    }

]]></Source>
			</Method>
			<Method>
				<Name>getStartDate</Name>
				<Source><![CDATA[
    public void getStartDate()
    {
        Days days = PIPInventQualityWorkspaceConfiguration::findOrCreateForCurrentUser().OrderCreatedDays;

        // Create and apply datetime filter, time of day should be 0 to avoid workspace filter triggering update of dataset cache every time you refresh the form.
        utcdatetime currentDateTime = DateTimeUtil::newDateTime(DateTimeUtil::getSystemDate(DateTimeUtil::getUserPreferredTimeZone()), 0);
        utcdatetime filterDateTime  = DateTimeUtil::addDays(currentDateTime, - days);

        startDate = DateTimeUtil::date(filterDateTime);
    }

]]></Source>
			</Method>
			<Method>
				<Name>onFilterChanged</Name>
				<Source><![CDATA[
    /// <summary>
    /// Event handler to react on a filter change.
    /// </summary>
    public void onFilterChanged()
    {
        this.updateChart();
    }

]]></Source>
			</Method>
			<Method>
				<Name>updateChart</Name>
				<Source><![CDATA[
    public void updateChart()
    {
        List            graphData;
        ListEnumerator  graphDataEnumerator;
        container       data;

        #define.PosCategory(1)
        #define.PosCount(2)

        dataProvider                = PIPInventQualityAnalyticsDataProvider::construct();
        qualityAnalyticsCategory    = AnalyticsCategory.selection();     
        graphics                    = Graphics::newGraphicsNoTitlesSysChart(OrderFailureStatistics, GraphicsTmpData);
                
        this.getStartDate();

        if (startDate)
        {
            dataProvider.parmStartDate(startDate);
        }

        switch (qualityAnalyticsCategory)
        {
            case PIPInventQualityAnalyticsCategory::ReferenceType :
                graphData = List::create(dataProvider.getFailurePercentageByReferenceType());               
                break;

            case PIPInventQualityAnalyticsCategory::Customer :
                graphData = List::create(dataProvider.getFailurePercentageByCustomers());                
                break;

            case PIPInventQualityAnalyticsCategory::Vendor :
                graphData = List::create(dataProvider.getFailurePercentageByVendors());              
                break;

            case PIPInventQualityAnalyticsCategory::Product :
                graphData = List::create(dataProvider.getFailurePercentageByProducts());             
                break;
    
            case PIPInventQualityAnalyticsCategory::Test :
                graphData = List::create(dataProvider.getFailurePercentageByTests());              
                break;
        }
        graphics.parmTitle("@PIP4074");
        graphics.parmSysChart(OrderFailureStatistics);
        graphics.parmCreateType(#CT_LEGEND | #CT_3D);
        graphics.create();
        
        graphDataEnumerator = graphData.getEnumerator();

        while (graphDataEnumerator.moveNext())
        {
            data = graphDataEnumerator.current();
            graphics.loadData(conPeek(data, #PosCategory), '', conPeek(data, #PosCount));
        }
        
        graphics.showGraph();
    }

]]></Source>
