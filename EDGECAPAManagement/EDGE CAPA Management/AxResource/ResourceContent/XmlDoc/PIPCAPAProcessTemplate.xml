<?xml version="1.0" encoding="utf-8"?>
<CAPATemplates>
    <groups>
       <group id="Implementer" name="Implements the solution for an incident"/>
       <group id="Investigator" name="Investigates a reported incident"/>
       <group id="Verifier" name="Verifies the validity of an incident"/>
       <group id="Approver" name="Approves the escalation of an incident"/>
    </groups>
    <template name="CAPAProcessTemplate" description="Basic CAPA processing template with sample stages and activities for processing a CAPA case">
	<level purpose="DEFINITION" group="Investigator">
	    <task purpose="Identify the problem"/>
	</level>
	<level purpose="EVALUATION" group="Investigator">
	    <task purpose="Risk management assessment"/>
	    <action purpose="Action needed?"/>
	</level>
	<level purpose="INVESTIGATION" group="Investigator">
	    <task purpose="Assignment to delegates"/>
	    <task purpose="Responses and inputs received"/>
	</level>
	<level purpose="ANALYZE" group="Investigator">
	    <task purpose="Implementation plan developed"/>
	    <task purpose="Verification plan developed"/>
	    <task purpose="Due dates and responsible parties identified"/>
	    <action purpose="Failure investigation report approved?" group="Approver"/>
	    <action purpose="Implementation plan approved?" group="Approver"/>
	</level>
	<level purpose="NOTIFICATION" group="Approver">
	    <task purpose="Management review"/>
	</level>
	<level purpose="IMPLEMENTATION" group="Implementer">
	    <task purpose="Implement corrective/preventive action plan"/>
	    <task purpose="Document plan completion"/>
	</level>
	<level purpose="VERIFICATION" group="Verifier">
	    <task purpose="Verification and validation performed"/>
	</level>
	<level purpose="CONTROL" group="Verifier">
	    <task purpose="Effectiveness of corrective action assessed"/>
	    <action purpose="Close CAPA report"/>
	</level>
    </template>
</CAPATemplates>
